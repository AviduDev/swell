{
  "name": "Collection preview",
  "description": "Previews of several items from a collection with call-to-action",
  "fields": [
    {
      "label": "Content",
      "type": "field_group",
      "fields": [
        {
          "id": "category",
          "label": "Category",
          "type": "category_lookup"
        }
      ]
    },
    {
      "label": "Styling",
      "type": "field_group",
      "fields": [
        {
          "label": "Layout",
          "type": "heading"
        },
        {
          "id": "product_cols",
          "label": "Number of products per row",
          "type": "select",
          "options": [2, 3, 4, 5],
          "default": 3
        },
        {
          "id": "product_rows",
          "label": "Number of rows per block",
          "type": "select",
          "options": [1, 2],
          "default": 1
        },
        {
          "id": "text_align",
          "label": "Text alignment",
          "type": "select",
          "default": "left",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            }
          ]
        },
        {
          "id": "show_price",
          "label": "Show product price",
          "type": "toggle",
          "default": true
        },
        {
          "label": "Title",
          "type": "heading"
        },
        {
          "id": "show_title",
          "label": "Show title",
          "type": "toggle",
          "default": true
        },
        {
          "id": "use_category_title",
          "label": "Use category name as title",
          "type": "toggle",
          "default": true,
          "conditions": { "show_title": true }
        },
        {
          "id": "title",
          "label": "Title",
          "type": "text",
          "conditions": { "show_title": true, "use_category_title": false }
        },
        {
          "id": "title_size",
          "label": "Title size",
          "type": "select",
          "options": [
            {
              "value": "sm",
              "label": "Small"
            },
            {
              "value": "md",
              "label": "Medium"
            },
            {
              "value": "lg",
              "label": "Large"
            }
          ],
          "default": "md",
          "conditions": { "show_title": true }
        }
      ]
    }
  ]
}
