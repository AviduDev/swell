{
  "name": "Heading with text",
  "description": "Large heading with single or multi-column text",
  "fields": [
    {
      "label": "Content",
      "type": "field_group",
      "fields": [
        {
          "id": "heading",
          "label": "Heading",
          "type": "text",
          "required": true
        },
        {
          "id": "text",
          "label": "Text",
          "type": "long_text",
          "required": true
        }
      ]
    },
    {
      "label": "Styling",
      "type": "field_group",
      "fields": [
        {
          "id": "heading_position",
          "label": "Heading position",
          "type": "select",
          "default": "top-center",
          "options": [
            {
              "value": "top-center",
              "label": "Top center"
            },
            {
              "value": "top-left",
              "label": "Top left"
            },
            {
              "value": "left",
              "label": "Left"
            }
          ]
        },
        {
          "id": "text_columns",
          "label": "Text columns",
          "type": "select",
          "default": "Dual column",
          "conditions": { "heading_position": { "$ne": "left" } },
          "options": [
            {
              "value": "dual",
              "label": "Dual column"
            },
            {
              "value": "single",
              "label": "Single column"
            }
          ]
        }
      ]
    }
  ]
}
